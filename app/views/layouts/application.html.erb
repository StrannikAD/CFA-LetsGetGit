              </a>
              <a class="nav-item">
                Home
              </a>
              <span class="nav-item">
                <a class="button is-default">
                	<% if user_signed_in? %>
					  <li>
					  	<%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
